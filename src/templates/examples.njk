        display: flex;
        flex-wrap: wrap;
        justify-content: space-between;
        align-items: flex-start;
      }

      .u-form-input {
        flex-basis: 49%;
      }

      .u-wide {
        width: 100%;
      }
    </style>

    <form>
      <fieldset>
        <div class="cant-flex-on-fieldset">
          <div class="u-form-input">
